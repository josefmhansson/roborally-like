{
  "name": "scaffold",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:online": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "dev:online:lan": "concurrently \"npm run server:dev\" \"npm run dev:lan\"",
    "dev:online:lan:https": "concurrently \"npm run server:dev\" \"npm run dev:lan:https\"",
    "dev:lan": "vite --host 0.0.0.0 --port 5173",
    "dev:lan:https": "vite --mode lan-https --host 0.0.0.0 --port 5173",
    "server:dev": "tsx watch server/index.ts",
    "server:start": "tsx server/index.ts",
    "test:server": "node --import tsx --test --test-concurrency=1 --experimental-test-isolation=none server/tests/*.test.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "preview:lan:https": "vite preview --mode lan-https --host 0.0.0.0 --port 4173"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}
